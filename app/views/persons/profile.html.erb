<p id="notice"><%= notice %></p>
<% if current_user == nil %>
<div>Log or sign in, please </div>
<% else %>
<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Description</th>
      <th>Authors grade</th>      
      <th colspan="3"></th>
    </tr>
  </thead>
  <div><%= current_user ? current_user.id : 'no user'%></div>
  <tbody>
    <% @reviews.try(:each) {|review| %>
    <tr>
      <td><%= review.title %></td>
      <td><%= review.category %></td>
      <td><%= review.rich_description %></td>        
      <td><%= review.authors_grade %></td> 
      <td><%= link_to 'Show', review %></td>
      <td><%= link_to 'Edit', edit_review_path(review) %></td>
      <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <%}%>
    

    
  </tbody>
</table>
<% end %>
<br>

<%= link_to 'New Review', new_review_path %>
